<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TicTacToeXamForms.Views.GameView">
    
    <ContentView.Resources>
        <StyleSheet Source="/Views/Game_view.css" />
    </ContentView.Resources>

    <ContentView.Content>
        <StackLayout Orientation="Vertical" HorizontalOptions="Center">
            <Label HorizontalOptions="Center" StyleClass="standart_text" x:Name="GameTextView" />
            <StackLayout Orientation="Vertical" VerticalOptions="Start" StyleClass="buttons-wrapper"
                         HorizontalOptions="Center" x:Name="BtnsWrapper" />
            <Button Text="Start" Clicked="Reset" StyleClass="button" x:Name="StartGameBtn"/>
            <Label HorizontalOptions="Center" StyleClass="standart_text" x:Name="GameStat" />
        </StackLayout>
    </ContentView.Content>
</ContentView>